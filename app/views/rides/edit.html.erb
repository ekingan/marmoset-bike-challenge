<div class="container">
	<div class="row">
		<div class="col-md-8 col-offset-3">
			<h2>Edit your ride</h2>
		</div>
		<div class="col-md-8">
			<%= render 'form', ride: @ride %>
		</div>
		<div class="col-md-4">
			<br>
			<h5><%= link_to 'Show', @ride %> |
			<%= link_to 'Back', user_path(@ride.user) %> |
			<%= link_to 'Delete', @ride, method: :delete, data: { confirm: 'Are you sure?' } %> </h5>
		</div>
	</div>
</div>
