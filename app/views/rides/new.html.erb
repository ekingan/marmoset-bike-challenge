<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<div class="logo">
				<%= image_tag('marmoset_music_share.png') %>
			</div>
		</div>
		<div class="col-sm-8 title">
			<h1>May Bike Challenge - Log your Ride</h1>
			<%= render 'form', ride: @ride %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-9">
			<div class="calendar">
				<center>
					<h2>Marmoset Riders Log</h2>
					<h4>Click on your name to edit</h4>
				</center>
				<%= calendar do |date| %>
					<%= date.day %>
					<% if @rides_by_date[date] %>
						<ul>
							<% @rides_by_date[date].each do |ride| %>
							<li><%= link_to ride.user.name, user_path(ride.user) %></li>
							<% end %>
						</ul>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="col-sm-3">
			<div class="high-scores">
				<h3>Top Riders</h3>
				<ul class="hish-scores" style="align:left;">
					<% @top_riders.each do |rider| %>
					<% if rider.score > 0 %>
						<li><%= link_to rider.name, user_path(rider) %>
							(<%= pluralize(rider.score, 'ride') %>)
						</li>
						<% end %>
					<% end %>
				</ul>
				<h5><%= link_to "See all rides", rides_path %></h5>
			</div>
		</div>
	</div>
</div>
