<div class="container ride-show">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <center><p id="notice"><%= notice %></p></center>
      <div class="col-sm-4">
        <h4><%= @ride.user.name %></h4>
      </div>
      <div class="col-sm-4">
        <h4><%= @ride.date.to_formatted_s(:long_ordinal) %></h4>
      </div>
      <div class="col-sm-1">
        <h4><%= link_to 'Edit', edit_ride_path(@ride) %></h4>
      </div>
      <div class="col-sm-1">
        <h4><%= link_to 'Back', root_path %></h4>
      </div>
      <div class="col-sm-2">
        <h4><%= link_to 'Delete', @ride, method: :delete, data: { confirm: 'Are you sure?' } %></h4>
      </div>
    </div>
  </div>
</div>
