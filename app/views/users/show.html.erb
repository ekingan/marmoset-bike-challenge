<div class="container user-show">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-sm-6">
        <h2><%= @user.name %></h2>
      </div>
      <div class="col-sm-6">
        <h2>Total Rides: <%= @user.score %></h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% @user.rides.each do |ride| %>
      <div class="col-sm-6">
          <%=ride.date.to_formatted_s(:long_ordinal)  %>
      </div>
      <div class="col-sm-6">
        <%= link_to 'Edit', edit_ride_path(ride) %> |
        <%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= link_to 'Home', root_path %>
      </div>
    </div>
  </div>
</div>
